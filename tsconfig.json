{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "noImplicitAny": true,
        "sourceMap": false,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "inlineSourceMap": false,
        "inlineSources": false,
        "noEmitOnError": false,
        "paths": {
            "@/*": [
                "/"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}