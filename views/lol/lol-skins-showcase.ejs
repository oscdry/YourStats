<%# This component takes a (popularSkins) object parameter to display the
popular skins %>
<div class="d-flex flex-row"><h3 class="container-fluid my-3" id="lol-popular-skins">Skins populares</h3>
   
    <a href="/lol/skins">
        <button type="button" class="nav-link primary align-items-center"> 
            <i class="fa-solid fa-magnifying-glass pt-2"></i><p id="btn-skins-search">Buscador Skins</p>
        </button>
        </a>
</div>
<div class="lol-skins-showcase">
    <div class="lol-skins-container">
        <% popularSkins.forEach(skin => { %>
        <div class="lol-skin-card">
            <img src="<%= skin.skinURL %>" alt="<%= skin.name %>">
            <div class="skin-info">
                <p class="skin-name"><%= skin.skinName %></p>
                <div class="skin-price d-flex flex-row gap-1 ">
                    <p class="price">
                        Precio:
                    </p>
                    <p><%= skin.price %></p>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
