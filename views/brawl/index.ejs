<%# This component takes (brawlhomedata) param to display the Brawl Stars home
page %>

<%- include('../partials/components/banner.ejs', {mode : "brawl"}) %>

<head>
    <link rel="stylesheet" href="/css/brawl.css">
</head>

<main class="banner-main">
    <%# Breadcrumb %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Brawl
                Stars</li>
        </ol>
    </nav>

    <h1 class="title">Brawl Stars</h1>

    <%- include('../partials/components/game-input-username.ejs', {mode:
    "brawl"}) %>

    <h3 class="my-3">Rankings</h3>
    <div
        class="container-fluid d-flex flex-row flex-wrap justify-content-around my-3">
        <%- include('./brawl-rankings.ejs', {ranking: brawlhomedata.rankSpain,
        title: 'Spain', titleId: 'spain'}) %>

        <%- include('./brawl-rankings.ejs', {ranking: brawlhomedata.rankGlobal, title: 'Global', titleId: 'global'})
        %>
    </div>

    <%- include('./brawl-skins-showcase.ejs', {skinsBrawls:
    brawlhomedata.skinsBrawls}) %>

    <% console.log('Spain:',brawlhomedata.rankSpain)%>

</main>
