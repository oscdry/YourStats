
<head>
    <link rel="stylesheet" href="/css/user.css">
    <script src="/js/user.js" type="module" defer></script>
</head>

<%- include('./partials/components/banner.ejs', {hide:true}) %>

<main class="banner-main">
    <div class="profile">
        <div class="profile-pic-container">
            <img src="/img/storage/users/<%= userView.id %>.jpg"
                alt="Foto de perfil" class="profile-pic"
                onerror="this.onerror=null; this.src='/img/storage/users/default.jpg'">
            <button id="upload-pfp" class="upload-pic-btn secondary"
                style="display:none;">Cambiar imagen
                <br>

            </button>
            <input type="file" id="fileInput" style="display: none;"
                accept="image/*">
            <p class="error-text">
            </p>
        </div>
        <div class="user-title" id="user-title">
            <div id="user-info">

                <h1 id="current-username" class="title"><%=
                    userView.username%></h1>

                <div class="points-div" id="userView-userPoints">
                    <p class="points">
                        50125
                    </p>
                    Puntos
                </div>
            </div>
            <%# Edit form %>
            <form class="user-info-editing input-row hide"
                id="user-title-editing">
                <input type="text" id="new-username-input"
                    class="input-row-labeled"
                    value="<%= userView.username%>">
                <p class="error-text"></p>
                <div
                    class="d-flex flex-row w-100 justify-content-around align-items-center">
                    <button type="submit" id="submit-username"
                        class="primary"><i
                            class="fa-solid fa-check"></i>
                    </button>
                    <button type="button" id="cancel-username"
                        class="secondary"><i
                            class="fa-solid fa-times"></i>
                    </button>
                </div>
            </form>
        </div>
        <button id="edit-username" class="primary small"><i
                class="fa-solid fa-pencil"></i>
        </button>

    </div>
    <div class="bio-info">
        <textarea id="user-bio" disabled readonly><%= userView.bio %></textarea>
        <button id="edit-bio" class="primary"><i
                class="fa-solid fa-pencil"></i></button>

        <div id="user-bio-editing" class="user-bio-editing hide">
            <p class="error-text"></p>
            <div
                class="d-flex flex-row w-100 justify-content-around align-items-center">
                <button type="submit" id="submit-bio"
                    class="primary"><i
                        class="fa-solid fa-check"></i>
                </button>
                <button type="button" id="cancel-bio"
                    class="secondary"><i
                        class="fa-solid fa-times"></i>
                </button>
            </div>
        </div>
    </div>
</main>