<div id="modal-contacto" class="modal fade" tabindex="-1"
    aria-labelledby="modal-contact-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modal-contact-label">Formulario
                    de Contacto</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <%- include('./components/input-username.ejs',
                {id:"contact-username-input"}) %>

                <%- include('./components/input-mail.ejs',
                {id:"contact-mail-input"}) %>

                <%- include('./components/textarea-generic.ejs',
                {label:"text", name:"Asunto", id:"contact-content-input"})
                %>
            </div>
            <p class="error-text" id="contact-error-text"></p>
            <div class="modal-footer">
                <button type="button" class="primary"
                    id="contact-submit" data-bs-dismiss="modal">Enviar</button>
            </div>
        </div>
    </div>
</div>

<%# Modal cuando se envÃ­a el formulario correctamente %>
<div id="modal-contacto-success" class="modal fade" tabindex="-1"
    aria-labelledby="modal-contact-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modal-contact-success-label">Enviado Correctamente</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="modal-contact-responseMessage">Gracias por contactar con nosotros. Te responderemos lo antes posible.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="primary"
                    id="contact-success-submit" data-bs-dismiss="modal">Gracias!</button>
            </div>
        </div>
    </div>
</div>