<%- include('./partials/components/banner.ejs') %>
<main class="banner">

    <div id="banner" class="carousel slide"
        data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/img/banners/lol-a.jpg"
                    alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/img/banners/lol-b.jpg"
                    alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/img/banners/lol-b.jpg"
                    alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#banner"
            role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#banner"
            role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
        </a>
    </div>

    <%- include('./partials/components/game-selector.ejs') %>

